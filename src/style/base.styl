html
  font-size: 62.5%

body
  margin: 0
  padding: 0
  -webkit-font-smoothing: antialiased
  -webkit-tap-highlight-color: rgba(0,0,0,0)

.dd-wrapper

  ul, li
    margin: 0
    padding: 0
    list-style: none

  p
    margin: 0
    padding: 0

  *
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased
    box-sizing: border-box
    text-rendering: optimizeLegibility

  *:focus
    outline: none
